<h2>Login</h2>

<form method="POST" action="/auth/login">

    <label> Username: 
        <input type="text" name="username" required >
    </label>

    <label> Password:
        <input type="password" name="password" required >
    </label>

    <button type="submit">Submit</button>

</form>

<% if (typeof errorMessage != "undefined") { %>
    <p> <%= errorMessage %> </p>
 <% } %>